<UserControl x:Class="SimpleNetworkDataCapturer.Controls.NetworkCaptureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1E1E1E">
    
    <UserControl.Resources>
        <!-- 工业风样式 -->
        <Style x:Key="IndustrialButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#1A1A1A"/>
                                <Setter Property="Foreground" Value="#606060"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IndustrialDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#404040"/>
            <Setter Property="RowBackground" Value="#2D2D2D"/>
            <Setter Property="AlternatingRowBackground" Value="#252525"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="IndustrialDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#505050"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="IndustrialDataGridCell" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Margin="6,3"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 控制面板 -->
        <Border Grid.Row="0" Background="#252525" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 主要控制按钮 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="StartButton" 
                            Content="开始抓包" 
                            Style="{StaticResource IndustrialButton}"
                            Click="StartButton_Click"/>
                    
                    <Button x:Name="StopButton" 
                            Content="停止抓包" 
                            Style="{StaticResource IndustrialButton}"
                            Click="StopButton_Click"/>
                    
                    <Button x:Name="ClearButton" 
                            Content="清空数据" 
                            Style="{StaticResource IndustrialButton}"
                            Click="ClearButton_Click"/>
                </StackPanel>
                
                <!-- 过滤控制 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox x:Name="FilterCheckBox" 
                              Content="启用过滤" 
                              Foreground="#E0E0E0" 
                              VerticalAlignment="Center"
                              Margin="10,0"
                              Checked="FilterCheckBox_Checked"
                              Unchecked="FilterCheckBox_Unchecked"/>
                    
                    <Button x:Name="FilterButton" 
                            Content="过滤设置" 
                            Style="{StaticResource IndustrialButton}"
                            Click="FilterButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 统计信息 -->
        <Border Grid.Row="1" Background="#252525" Padding="10,6" Margin="0,0,0,5">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="状态: " Foreground="#E0E0E0" FontWeight="Bold" FontSize="11"/>
                    <TextBlock x:Name="StatusText" Text="就绪" Foreground="#90EE90" Margin="5,0" FontSize="11"/>
                    
                    <TextBlock Text=" | 总计: " Foreground="#E0E0E0" FontWeight="Bold" Margin="15,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="TotalText" Text="0" Foreground="#87CEEB" Margin="5,0" FontSize="11"/>
                    
                    <TextBlock Text=" | TCP: " Foreground="#E0E0E0" FontWeight="Bold" Margin="15,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="TcpText" Text="0" Foreground="#FFB6C1" Margin="5,0" FontSize="11"/>
                    
                    <TextBlock Text=" | HTTP: " Foreground="#E0E0E0" FontWeight="Bold" Margin="15,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="HttpText" Text="0" Foreground="#FFA500" Margin="5,0" FontSize="11"/>
                    
                    <TextBlock Text=" | HTTPS: " Foreground="#E0E0E0" FontWeight="Bold" Margin="15,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="HttpsText" Text="0" Foreground="#32CD32" Margin="5,0" FontSize="11"/>
                    
                    <TextBlock Text=" | UDP: " Foreground="#E0E0E0" FontWeight="Bold" Margin="15,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="UdpText" Text="0" Foreground="#DDA0DD" Margin="5,0" FontSize="11"/>
                    
                    <TextBlock Text=" | DNS: " Foreground="#E0E0E0" FontWeight="Bold" Margin="15,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="DnsText" Text="0" Foreground="#00CED1" Margin="5,0" FontSize="11"/>
                    
                    <TextBlock Text=" | DHCP: " Foreground="#E0E0E0" FontWeight="Bold" Margin="15,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="DhcpText" Text="0" Foreground="#FF69B4" Margin="5,0" FontSize="11"/>
                    
                    <TextBlock Text=" | ICMP: " Foreground="#E0E0E0" FontWeight="Bold" Margin="15,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="IcmpText" Text="0" Foreground="#FF4500" Margin="5,0" FontSize="11"/>
                    
                    <TextBlock Text=" | 其他: " Foreground="#E0E0E0" FontWeight="Bold" Margin="15,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="OtherText" Text="0" Foreground="#F0E68C" Margin="5,0" FontSize="11"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- 数据包表格 -->
        <DataGrid Grid.Row="2" 
                  x:Name="PacketsDataGrid"
                  Style="{StaticResource IndustrialDataGrid}"
                  ColumnHeaderStyle="{StaticResource IndustrialDataGridColumnHeader}"
                  CellStyle="{StaticResource IndustrialDataGridCell}"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  AutoGenerateColumns="False">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="时间" 
                                    Binding="{Binding FormattedTime}" 
                                    Width="120"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="源地址" 
                                    Binding="{Binding SourceAddress}" 
                                    Width="100"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="源端口" 
                                    Binding="{Binding SourcePort}" 
                                    Width="60"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="目标地址" 
                                    Binding="{Binding DestinationAddress}" 
                                    Width="100"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="目标端口" 
                                    Binding="{Binding DestinationPort}" 
                                    Width="60"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="协议" 
                                    Binding="{Binding Protocol}" 
                                    Width="50"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="长度" 
                                    Binding="{Binding Length}" 
                                    Width="50"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="可读数据" 
                                    Binding="{Binding ReadableData}" 
                                    Width="150"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="十六进制" 
                                    Binding="{Binding HexData}" 
                                    Width="200"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl> 