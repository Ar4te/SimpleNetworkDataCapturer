<Window x:Class="SimpleNetworkDataCapturer.Controls.FilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="过滤设置" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E" ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="IndustrialButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        
        <Style x:Key="IndustrialTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <Style x:Key="IndustrialComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <Style x:Key="IndustrialCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="过滤规则设置" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="#E0E0E0" Margin="0,0,0,20"/>
        
        <!-- 主要内容 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：规则列表 -->
            <Border Grid.Column="0" Background="#252525" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="当前规则:" 
                               FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,10"/>
                    
                    <ListBox Grid.Row="1" x:Name="RulesListBox" 
                             Background="#1E1E1E" Foreground="#E0E0E0"
                             BorderBrush="#404040" BorderThickness="1"
                             SelectionChanged="RulesListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <CheckBox IsChecked="{Binding IsEnabled}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" Foreground="#E0E0E0" 
                                               VerticalAlignment="Center" Width="100"/>
                                    <TextBlock Text="{Binding Description}" 
                                               Foreground="#CCCCCC" VerticalAlignment="Center" 
                                               Width="150" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- 中间：分隔线 -->
            <Border Grid.Column="1" Background="#404040" Width="1" Margin="10,0"/>
            
            <!-- 右侧：规则编辑 -->
            <Border Grid.Column="2" Background="#252525" Padding="10" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="规则编辑:" 
                               FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,10"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- 规则名称 -->
                            <TextBlock Text="规则名称:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <TextBox x:Name="RuleNameTextBox" Style="{StaticResource IndustrialTextBox}" 
                                     Margin="0,0,0,10"/>
                            
                            <!-- 规则描述 -->
                            <TextBlock Text="规则描述:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <TextBox x:Name="RuleDescriptionTextBox" Style="{StaticResource IndustrialTextBox}" 
                                     Margin="0,0,0,10"/>
                            
                            <!-- 过滤类型 -->
                            <TextBlock Text="过滤类型:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <ComboBox x:Name="FilterTypeComboBox" Style="{StaticResource IndustrialComboBox}" 
                                      Margin="0,0,0,10" SelectionChanged="FilterTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="源地址"/>
                                <ComboBoxItem Content="源端口"/>
                                <ComboBoxItem Content="目标地址"/>
                                <ComboBoxItem Content="目标端口"/>
                                <ComboBoxItem Content="协议类型"/>
                                <ComboBoxItem Content="可读内容"/>
                            </ComboBox>
                            
                            <!-- 操作符 -->
                            <TextBlock Text="操作符:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <ComboBox x:Name="FilterOperatorComboBox" Style="{StaticResource IndustrialComboBox}" 
                                      Margin="0,0,0,10">
                                <ComboBoxItem Content="包含"/>
                                <ComboBoxItem Content="等于"/>
                                <ComboBoxItem Content="不等于"/>
                                <ComboBoxItem Content="大于"/>
                                <ComboBoxItem Content="小于"/>
                                <ComboBoxItem Content="正则表达式"/>
                            </ComboBox>
                            
                            <!-- 过滤值 -->
                            <TextBlock Text="过滤值:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <TextBox x:Name="FilterValueTextBox" Style="{StaticResource IndustrialTextBox}" 
                                     Margin="0,0,0,10"/>
                            
                            <!-- 协议选择器（当过滤类型为协议时显示） -->
                            <StackPanel x:Name="ProtocolSelectorPanel" Visibility="Collapsed">
                                <TextBlock Text="协议选择:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                                <ComboBox x:Name="ProtocolComboBox" Style="{StaticResource IndustrialComboBox}" 
                                          Margin="0,0,0,10" SelectionChanged="ProtocolComboBox_SelectionChanged">
                                    <ComboBoxItem Content="HTTP"/>
                                    <ComboBoxItem Content="HTTPS"/>
                                    <ComboBoxItem Content="DNS"/>
                                    <ComboBoxItem Content="DHCP"/>
                                    <ComboBoxItem Content="TCP"/>
                                    <ComboBoxItem Content="UDP"/>
                                    <ComboBoxItem Content="ICMP"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- 启用状态 -->
                            <CheckBox x:Name="RuleEnabledCheckBox" Content="启用此规则" 
                                      Style="{StaticResource IndustrialCheckBox}" 
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- 编辑按钮 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="添加规则" Style="{StaticResource IndustrialButton}" 
                                Click="AddRule_Click"/>
                        <Button Content="更新规则" Style="{StaticResource IndustrialButton}" 
                                Click="UpdateRule_Click"/>
                        <Button Content="删除规则" Style="{StaticResource IndustrialButton}" 
                                Click="DeleteRule_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="确定" Style="{StaticResource IndustrialButton}" 
                    Click="OK_Click" Width="80"/>
            <Button Content="取消" Style="{StaticResource IndustrialButton}" 
                    Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window> 