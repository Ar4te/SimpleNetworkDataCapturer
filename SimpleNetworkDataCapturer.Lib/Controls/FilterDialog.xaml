<Window x:Class="SimpleNetworkDataCapturer.Controls.FilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="过滤设置" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E" ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="IndustrialButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="IndustrialTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="IndustrialComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="#2D2D2D"
                                                BorderBrush="#404040"
                                                BorderThickness="1">
                                            <Grid>
                                                <Path x:Name="Arrow"
                                                      Fill="#E0E0E0"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,8,0"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{x:Null}"
                                     Template="{DynamicResource ComboBoxTextBox}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="{TemplateBinding Padding}"
                                     Focusable="True"
                                     Background="Transparent"
                                     Foreground="#E0E0E0"
                                     Visibility="Hidden"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="#1E1E1E"
                                            BorderThickness="1"
                                            BorderBrush="#404040"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IndustrialCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <Style x:Key="IndustrialComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IndustrialComboBoxSelectionBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="IndustrialListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IndustrialScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"
                                                  CanContentScroll="{TemplateBinding CanContentScroll}"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  Grid.ColumnSpan="2"
                                                  Margin="{TemplateBinding Padding}"/>

                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1" Grid.Row="0"
                                       Orientation="Vertical"
                                       Maximum="{TemplateBinding ScrollViewer.ScrollableHeight}"
                                       Minimum="0"
                                       Value="{TemplateBinding ScrollViewer.VerticalOffset}"
                                       ViewportSize="{TemplateBinding ScrollViewer.ViewportHeight}"
                                       Visibility="{TemplateBinding ScrollViewer.ComputedVerticalScrollBarVisibility}"
                                       Background="Transparent"
                                       BorderBrush="Transparent"
                                       Foreground="#404040">
                                <ScrollBar.Template>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid>
                                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                                <Track.DecreaseRepeatButton>
                                                    <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false"/>
                                                </Track.DecreaseRepeatButton>
                                                <Track.Thumb>
                                                    <Thumb Background="#606060" BorderBrush="#808080" BorderThickness="1"/>
                                                </Track.Thumb>
                                                <Track.IncreaseRepeatButton>
                                                    <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false"/>
                                                </Track.IncreaseRepeatButton>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </ScrollBar.Template>
                            </ScrollBar>

                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                                       Grid.Column="0" Grid.Row="1"
                                       Orientation="Horizontal"
                                       Maximum="{TemplateBinding ScrollViewer.ScrollableWidth}"
                                       Minimum="0"
                                       Value="{TemplateBinding ScrollViewer.HorizontalOffset}"
                                       ViewportSize="{TemplateBinding ScrollViewer.ViewportWidth}"
                                       Visibility="{TemplateBinding ScrollViewer.ComputedHorizontalScrollBarVisibility}"
                                       Background="Transparent"
                                       BorderBrush="Transparent"
                                       Foreground="#404040">
                                <ScrollBar.Template>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid>
                                            <Track x:Name="PART_Track" IsDirectionReversed="false">
                                                <Track.DecreaseRepeatButton>
                                                    <RepeatButton Command="ScrollBar.PageLeftCommand" Opacity="0" Focusable="false"/>
                                                </Track.DecreaseRepeatButton>
                                                <Track.Thumb>
                                                    <Thumb Background="#606060" BorderBrush="#808080" BorderThickness="1"/>
                                                </Track.Thumb>
                                                <Track.IncreaseRepeatButton>
                                                    <RepeatButton Command="ScrollBar.PageRightCommand" Opacity="0" Focusable="false"/>
                                                </Track.IncreaseRepeatButton>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </ScrollBar.Template>
                            </ScrollBar>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="过滤规则设置" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="#E0E0E0" Margin="0,0,0,20"/>

        <!-- 主要内容 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：规则列表 -->
            <Border Grid.Column="0" Background="#252525" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="当前规则:" 
                               FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,10"/>

                    <ListBox Grid.Row="1" x:Name="RulesListBox" 
                             Background="#1E1E1E" Foreground="#E0E0E0"
                             BorderBrush="#404040" BorderThickness="1"
                             ItemContainerStyle="{StaticResource IndustrialListBoxItem}"
                             SelectionChanged="RulesListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <CheckBox IsChecked="{Binding IsEnabled}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" Foreground="#E0E0E0" 
                                               VerticalAlignment="Center" Width="100"/>
                                    <TextBlock Text="{Binding Description}" 
                                               Foreground="#CCCCCC" VerticalAlignment="Center" 
                                               Width="150" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 中间：分隔线 -->
            <Border Grid.Column="1" Background="#404040" Width="1" Margin="10,0"/>

            <!-- 右侧：规则编辑 -->
            <Border Grid.Column="2" Background="#252525" Padding="10" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="规则编辑:" 
                               FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                  Style="{StaticResource IndustrialScrollViewer}">
                        <StackPanel>
                            <!-- 规则名称 -->
                            <TextBlock Text="规则名称:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <TextBox x:Name="RuleNameTextBox" Style="{StaticResource IndustrialTextBox}" 
                                     Margin="0,0,0,10"/>

                            <!-- 规则描述 -->
                            <TextBlock Text="规则描述:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <TextBox x:Name="RuleDescriptionTextBox" Style="{StaticResource IndustrialTextBox}" 
                                     Margin="0,0,0,10"/>

                            <!-- 过滤类型 -->
                            <TextBlock Text="过滤类型:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <ComboBox x:Name="FilterTypeComboBox" Style="{StaticResource IndustrialComboBox}" 
                                      ItemContainerStyle="{StaticResource IndustrialComboBoxItem}"
                                      Margin="0,0,0,10" SelectionChanged="FilterTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="源地址"/>
                                <ComboBoxItem Content="源端口"/>
                                <ComboBoxItem Content="目标地址"/>
                                <ComboBoxItem Content="目标端口"/>
                                <ComboBoxItem Content="协议类型"/>
                                <ComboBoxItem Content="可读内容"/>
                            </ComboBox>

                            <!-- 操作符 -->
                            <TextBlock Text="操作符:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <ComboBox x:Name="FilterOperatorComboBox" Style="{StaticResource IndustrialComboBox}" 
                                      ItemContainerStyle="{StaticResource IndustrialComboBoxItem}"
                                      Margin="0,0,0,10">
                                <ComboBoxItem Content="包含"/>
                                <ComboBoxItem Content="等于"/>
                                <ComboBoxItem Content="不等于"/>
                                <ComboBoxItem Content="大于"/>
                                <ComboBoxItem Content="小于"/>
                                <ComboBoxItem Content="正则表达式"/>
                            </ComboBox>

                            <!-- 过滤值 -->
                            <TextBlock Text="过滤值:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                            <TextBox x:Name="FilterValueTextBox" Style="{StaticResource IndustrialTextBox}" 
                                     Margin="0,0,0,10"/>

                            <!-- 协议选择器（当过滤类型为协议时显示） -->
                            <StackPanel x:Name="ProtocolSelectorPanel" Visibility="Collapsed">
                                <TextBlock Text="协议选择:" Foreground="#E0E0E0" Margin="0,5,0,2"/>
                                <ComboBox x:Name="ProtocolComboBox" Style="{StaticResource IndustrialComboBox}" 
                                          ItemContainerStyle="{StaticResource IndustrialComboBoxItem}"
                                          Margin="0,0,0,10" SelectionChanged="ProtocolComboBox_SelectionChanged">
                                    <ComboBoxItem Content="HTTP"/>
                                    <ComboBoxItem Content="HTTPS"/>
                                    <ComboBoxItem Content="DNS"/>
                                    <ComboBoxItem Content="DHCP"/>
                                    <ComboBoxItem Content="TCP"/>
                                    <ComboBoxItem Content="UDP"/>
                                    <ComboBoxItem Content="ICMP"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- 启用状态 -->
                            <CheckBox x:Name="RuleEnabledCheckBox" Content="启用此规则" 
                                      Style="{StaticResource IndustrialCheckBox}" 
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 编辑按钮 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="添加规则" Style="{StaticResource IndustrialButton}" 
                                Click="AddRule_Click"/>
                        <Button Content="更新规则" Style="{StaticResource IndustrialButton}" 
                                Click="UpdateRule_Click"/>
                        <Button Content="删除规则" Style="{StaticResource IndustrialButton}" 
                                Click="DeleteRule_Click"/>
                    </StackPanel>

                    <!-- 配置文件路径 -->
                    <TextBlock Grid.Row="3" Text="配置文件路径:" 
                               FontWeight="Bold" Foreground="#E0E0E0" Margin="0,10,0,5"/>
                    <TextBlock Grid.Row="4" x:Name="ConfigPathTextBlock" 
                               Foreground="#CCCCCC" FontSize="10" TextWrapping="Wrap"
                               Margin="0,0,0,10" />
                </Grid>
            </Border>
        </Grid>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="确定" Style="{StaticResource IndustrialButton}" 
                    Click="OK_Click" Width="80"/>
            <Button Content="取消" Style="{StaticResource IndustrialButton}" 
                    Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window> 